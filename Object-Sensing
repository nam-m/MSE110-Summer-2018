/*Object Sensing for line following robot
	Will search for object using ultrasonic sensor;
	If object is 10 or less cm away robot will pause for 2 sec and then beep*/ 

#pragma config(Sensor, S3,     US,             sensorEV3_Ultrasonic)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
	int i = 0; //will only beep once, leave outside of while loop

	while (true) //Put the code below in the main function (prioritize as first?)
		{
			float ObjDist = getUSDistance(US);
			//displayCenteredBigTextLine(7, "ObjDist: %f", ObjDist);

			if (ObjDist <= 10 && i == 0)
			{
				playSound(soundBeepBeep);
				sleep (1000);
				i++;
  		}
		}	
}
